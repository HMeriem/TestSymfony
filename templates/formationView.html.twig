{% extends 'layout.html.twig' %}
{% block body %}
    <div class="row">
        <div class="col-lg-6 col-md-12">
            <section class="panel">
                <header class="panel-heading panel-heading-transparent">
                    <div class="panel-actions">
                        <a href="#" class="fa fa-caret-down"></a>
                        <a href="#" class="fa fa-times"></a>
                    </div>
                    <h2 class="panel-title">Formations</h2>
                </header>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped mb-none">
                            <thead>
                            <tr>
                                <th>Modifier</th>
                                <th>Derniere modification</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for v in formation %}
                                {% if v.formationContinue != 1 %}
                                    <tr>
                                        <td>
                                            <a href="{{ path('formation', {'id' : v.id}) }}">{{v.intitule}} {{ v.annee }} {{ v.lieu }}</a>
                                        </td>
                                        <td><span class="label label-success"> <a href="{{ path('formation_delete', {'id' : v.id}) }}"> Remove</a></span></td>
                                    </tr>
                                {% endif %}
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </section>
        </div>
    <div class="col-lg-6 col-md-12">
                <section class="panel">
                    <header class="panel-heading panel-heading-transparent">
                        <div class="panel-actions">
                            <a href="#" class="fa fa-caret-down"></a>
                            <a href="#" class="fa fa-times"></a>
                        </div>
                <h2 class="panel-title">Formation Continue</h2>
                </header>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped mb-none">
                            <thead>
                            <tr>
                                <th>Modifier</th>
                                <th>Derniere modification</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for v in formation %}
                                {% if v.formationContinue != 0 %}
                                    <tr>
                                        <td>
                                            <a href="{{ path('formation') }}">{{v.intitule}} {{ v.annee }} {{ v.lieu }} {{ v.duree }} mois</a>
                                        </td>
                                        <td><span class="label label-success"> <a href="{{ path('formation_delete', {'id' : v.id}) }}"> Remove</a></span></td>
                                    </tr>
                                {% endif %}
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    $('.editable').editable()
{% endblock %}