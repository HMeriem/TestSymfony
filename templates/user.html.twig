{% extends 'layout.html.twig' %}
{% block body %}
    <div class="row">
        <div class="col-lg-6 col-md-12">
            <section class="panel">
                <header class="panel-heading panel-heading-transparent">
                    <div class="panel-actions">
                        <a href="#" class="fa fa-caret-down"></a>
                        <a href="#" class="fa fa-times"></a>
                    </div>

                    <h2 class="panel-title">Status du Profil</h2>
                </header>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped mb-none">
                            <thead>
                            <tr>
                                <th>Modifier</th>
                                <th>Derniere modification</th>
                            </tr>
                            </thead>
                            <tbody>
                            <tr>
                                <td>
                                    <a href="{{ path('index_profil') }}">Age : {{ app.user.age}}</a>
                                </td>
                                <td><span class="label label-success">Success</span></td>
                            </tr>
                            <tr>
                                <td>
                                    <a href="{{ path('index_profil') }}">Domicile : {{ app.user.adresse}}</a>
                                </td>
                                <td><span class="label label-success">Success</span></td>
                            </tr>
                            <tr>
                                <td>
                                    <a href="{{ path('index_profil') }}">Experience professionelle : {{ app.user.expPro}} ans</a>
                                </td>
                                <td><span class="label label-success">Success</span></td>
                            </tr>
                            <tr>
                                <td>
                                    <a href="{{ path('index_profil') }}">Poste : {{ app.user.poste}}</a>
                                </td>
                                <td><span class="label label-success">Success</span></td>
                            </tr>
                            <tr>
                                <td>
                                    <a href="{{ path('index_profil') }}"> Niveau d'anglais :

                                              {% if (app.user.anglais == 0) %}
                                                  Débutant
                                                  {% elseif (app.user.anglais == 1)  %}
                                                      Intermédiaire
                                                  {% elseif (app.user.anglais == 2 ) %}
                                                        Avancé
                                                  {% elseif (app.user.anglais == 3 ) %}
                                                  Expert
                                                      {% endif %}
                                     </a>
                                </td>
                                <td><span class="label label-success">Success</span></td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </section>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    $('.editable').editable()
{% endblock %}