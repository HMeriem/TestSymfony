<table class="tableCompetence">
    <tr class="competence">
        <th colspan="6">
        Résumé de carrière
        </th>
    </tr>
    <tbody>
    <tr class="entete">
        <td>
            Année
        </td>
        <td>
            Client
        </td>
        <td>
            Fonction
        </td>
        <td>
            Mode
        </td>
        <td>
            Env
        </td>
        <td>
            Duree
        </td>
    </tr>
    {% for expPro in expPros %}
    <tr>
        <td style="border: 1px solid lightgrey">
            <p align="center">
               {{ expPro.duree}}
            </p>
        </td>
        <td style="border: 1px solid lightgrey">
            <p align="center">
                {{ expPro.client }}
            </p>
        </td>
        <td style="border: 1px solid lightgrey">
            <p align="center">
                {{ expPro.fonction}}
            </p>
        </td>
        <td style="border: 1px solid lightgrey">
            <p align="center">
                {{ expPro.mode }}
            </p>
        </td>
        <td style="border: 1px solid lightgrey">
            <p align="center">
                {{ expPro.environnement }}
            </p>
        </td>
        <td style="border: 1px solid lightgrey">
            <p align="center">

              {{ expPro.annee}} ans et {{ expPro.mois}} mois

            </p>
        </td>
    </tr>
    {% endfor %}
    </tbody>
</table>
<table class="tableCompetence">
    <tr>
        <th class="expPro">
            Expérience Professionnelle
        </th>
    </tr>
</table>
{% for expPro in expPros %}
    <table class="tableExp" style="width: 100%;">
    <thead>
    <tr class="entete2" style="border: 1px solid lightgrey" >
        <td style="width: 40%;">
            {{ expPro.client }}
        </td>
        <td style="width: 40%;">
            {{ expPro.fonction }}
        </td>
        <td style="width: 20%; text-align: right;">
            {% if expPro.dateFin|date('Ymd') < 'now'|date('Ymd') %}
            Date de debut {{ expPro.duree }} , Date de fin {{ expPro.dureeFin }} <br>{{ expPro.annee}} ans et {{ expPro.mois}} mois
            {% else %}
                Date de debut {{ expPro.duree }} (en cours, {{ expPro.annee}} ans et {{ expPro.mois}} mois)
            {% endif %}
        </td>
    </tr>
    </thead>
        <tbody>
        <tr>
            <td style="border: 1px solid lightgrey; background-color: lightgrey" colspan="3">
                {{ expPro.description }}
            </td>
        </tr>
        <tr>

            <td  style="border: 1px solid lightgrey" colspan="2">
                {% for competencePro in competencePros %}
                {% if(competencePro.experiencePro == expPro.id) %}
                  - {{ competencePro.intitule }}<br>
                {% endif %}
                {% endfor %}
            </td>


            <td style="border: 1px solid lightgrey; color: deepskyblue">
                {% for technoPro in technoPros %}
                {% if(technoPro.experiencePro == expPro.id) %}
                    -  {{ technoPro.intitule }}<br>
                {% endif %}
                {% endfor %}

            </td>
        </tr>
        </tbody>

    </table>
{% endfor %}
</page>
